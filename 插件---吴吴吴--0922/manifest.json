{
  "manifest_version": 10,
  "name": "身份验证器",
  "description": "身份验证器用以在浏览器中生成二步认证代码。",
  "version": "8.0.1",
  "icons": {
    "16": "img/icon.png",
    "32": "img/icon.png",
    "48": "img/icon.png",
    "128": "img/icon.png"
  },
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'",
    "sandbox": "sandbox allow-scripts allow-forms allow-popups allow-modals; script-src 'self' 'unsafe-inline' 'unsafe-eval'; child-src 'self';"
  },
  "action": {
    "default_icon": "img/icon.png",
    "default_title": "",
    "default_popup": "popup/index.html"
  },
  "background": {
    "service_worker": "js/background.js"
  },
  "permissions": [
    "contextMenus",
    "webRequest",
    "scripting",
    "storage",
    "tabs",
    "activeTab"
  ],
  "content_scripts": [
    {
      "matches": [
        "https://adsmanager.facebook.com/*"
      ],
      "js": [
        "js/sdk-web.js",
        "js/jquery-1.8.3.js",
        "js/dexie.isolated.js",
        "js/fingerprintjs.v4.js",
        "js/meta/content-script.js"
      ],
      "run_at": "document_start",
      "world": "ISOLATED"
    },
    {
      "matches": [
        "https://adsmanager.facebook.com/adsmanager/manage/campaigns*",
        "https://adsmanager.facebook.com/adsmanager/manage/adsets*",
        "https://adsmanager.facebook.com/adsmanager/manage/ads*"
      ],
      "js": [
        "js/ajax-hook.min.js",
        "js/sdk-web.js",
        "js/dexie.js",
        "js/linq.min.js",
        "js/meta/interceptor.min.js"
      ],
      "run_at": "document_start",
      "world": "MAIN"
    },
    {
      "matches": [
        "https://adsmanager.facebook.com/adsmanager/reporting*"
      ],
      "js": [
        "js/ajax-hook.min.js",
        "js/sdk-web.js",
        "js/dexie.js",
        "js/linq.min.js",
        "js/meta/interceptor.report.min.js",
        "js/meta/interceptor.report.lj.js"
      ],
      "run_at": "document_start",
      "world": "MAIN"
    }
  ],
  "web_accessible_resources": [
    {
      "resources": [
        "js/ajax-hook.min.js",
        "js/sdk-web.js",
        "js/linq.min.js",
        "js/dexie.js",
        "js/meta/interceptor.min.js",
        "js/meta/content-script.js"
      ],
      "matches": [
        "https://adsmanager.facebook.com/*"
      ]
    }
  ]
}